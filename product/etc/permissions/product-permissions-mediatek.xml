<?xml version="1.0" encoding="utf-8"?>
<!--
This XML file declares which signature|privileged permissions should be granted to privileged
applications that come with the platform
-->
<permissions>
    <privapp-permissions package="com.android.contacts">
        <permission name="android.permission.MODIFY_PHONE_STATE"/>
        <permission name="android.permission.CALL_PRIVILEGED"/>
    </privapp-permissions>

    <privapp-permissions package="com.mediatek.simprocessor">
        <permission name="android.permission.INTERACT_ACROSS_USERS"/>
    </privapp-permissions>

    <privapp-permissions package="com.android.dialer">
        <permission name="android.permission.INTERACT_ACROSS_USERS"/>
        <permission name="android.permission.MANAGE_USERS"/>
        <permission name="android.permission.READ_PRIVILEGED_PHONE_STATE"/>
    </privapp-permissions>

    <privapp-permissions package="com.android.systemui">
        <permission name="android.permission.MANAGE_VOICE_KEYPHRASES"/>
        <!-- Add reboot permission for subsidy lock request8 -->
        <permission name="android.permission.REBOOT"/>
    </privapp-permissions>

    <privapp-permissions package="com.android.fmradio">
        <permission name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
        <permission name="android.permission.ACCESS_BROADCAST_RADIO"/>
        <permission name="android.permission.MODIFY_AUDIO_ROUTING"/>
        <permission name="android.permission.WRITE_MEDIA_STORAGE"/>
    </privapp-permissions>

    <privapp-permissions package="com.mediatek.autobootcontroller">
        <permission name="android.permission.MANAGE_USERS"/>
    </privapp-permissions>

    <privapp-permissions package="com.mediatek.ppl">
        <permission name="android.permission.INTERACT_ACROSS_USERS"/>
        <permission name="android.permission.MASTER_CLEAR"/>
        <permission name="android.permission.REBOOT"/>
    </privapp-permissions>

    <privapp-permissions package="com.mediatek.dataprotection">
        <permission name="android.permission.WRITE_MEDIA_STORAGE"/>
        <permission name="android.permission.MANAGE_USERS"/>
    </privapp-permissions>

    <privapp-permissions package="com.mediatek.security">
        <permission name="android.permission.STATUS_BAR"/>
    </privapp-permissions>

    <privapp-permissions package="com.mediatek.duraspeed">
        <permission name="android.permission.WRITE_SECURE_SETTINGS"/>
        <permission name="android.permission.INTERACT_ACROSS_USERS"/>
    </privapp-permissions>

    <privapp-permissions package="com.android.gallery3d">
        <permission name="android.permission.WRITE_MEDIA_STORAGE"/>
    </privapp-permissions>
	
    <privapp-permissions package="com.htc.Weather">
        <permission name="android.permission.SET_TIME"/>
		<permission name="android.permission.UPDATE_CONFIG"/>
		<permission name="android.permission.WRITE_SECURE_SETTINGS"/>
		<permission name="android.permission.INTERACT_ACROSS_USERS"/>
		<permission name="android.permission.SET_TIME_ZONE"/>
    </privapp-permissions>
	
    <privapp-permissions package="com.htc.masthead">
		<permission name="android.permission.REBOOT"/>
        <permission name="android.permission.CRYPT_KEEPER"/>
		<permission name="android.permission.INTERACT_ACROSS_USERS"/>
    </privapp-permissions>	
	
	<privapp-permissions package="com.htc.android.worldclock">
        <permission name="android.permission.WRITE_SECURE_SETTINGS"/>
		<permission name="android.permission.READ_PRIVILEGED_PHONE_STATE"/>
		<permission name="android.permission.MANAGE_USERS"/>
		<permission name="android.permission.INTERACT_ACROSS_USERS"/>
    </privapp-permissions>
    <!-- hzr add for IMEICustom -->
    <privapp-permissions package="com.water.imeicustom">
        <permission name="android.permission.READ_NETWORK_USAGE_HISTORY"/>
        <permission name="android.permission.WRITE_SECURE_SETTINGS"/>
        <permission name="android.permission.CONNECTIVITY_INTERNAL"/>
        <permission name="android.permission.WRITE_MEDIA_STORAGE"/>
        <permission name="android.permission.WRITE_APN_SETTINGS"/>
    </privapp-permissions>
    <!-- hzr add for runtimetest -->
    <privapp-permissions package="com.wzb.runtimetest">
        <permission name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    </privapp-permissions>
	
    <privapp-permissions package="ru.yandex.searchplugin">
        <permission name="android.permission.PACKAGE_USAGE_STATS"/>
    </privapp-permissions>
	
</permissions>
